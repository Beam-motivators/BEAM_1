<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageBg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/one"
                android:tint="#64000000"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/imageBg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/two"
                android:tint="#64000000"
                android:scaleType="fitXY" />


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_marginTop="75dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="313dp"
            android:layout_height="142dp"
            android:src="@drawable/tea_cup" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:text="PLANE."
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_medium"
            android:text="Book your flight tickets with us!"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SignIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:padding="10dp">


        <Button
            android:id="@+id/google_btn1"
            android:layout_width="317dp"
            android:layout_height="52dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/btn_corner"
            android:backgroundTint="@android:color/white"
            android:drawableStart="@drawable/google2"
            android:padding="15dp"
            android:text="Google" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Already have an account??"
            android:id="@+id/login_btn1"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>